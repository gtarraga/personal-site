---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Guillem Tarraga (gtarraga). I solve problems with software. A high-leverage generalist, jumping from one rabbit hole to another. Here are some things I've worked on:" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content="Guillem Tarraga (gtarraga). I solve problems with software. A high-leverage generalist, jumping from one rabbit hole to another. Here are some things I've worked on:" />
		<meta property="og:url" content="https://gtarraga.com" />
		<meta property="og:type" content="website" />
		<meta name="twitter:card" content="summary" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico">
    <link rel="icon" type="image/png" sizes="160x160" href="/favicon-160x160.png">
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Merriweather:wght@900&display=swap" rel="stylesheet">
		<link href="https://fonts.googleapis.com/css2?family=Geist+Mono:wght@300;400&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body>
		<header>
			<h1 class="site-title"><a href="/">guillem tarraga</a></h1>
		</header>
		<slot />
	</body>
</html>

<style is:global>
	* { 
		box-sizing: border-box; 
	}
	
	:root { 
		--text-color: #000; 
		--bg-color: #FFF; 
		--highlight-color: #ffd00066; 
		--muted-bg: #F2F0E5; 
	}
	
	body { 
		font-family: 'Geist Mono', 'Roboto Mono', monospace; 
		font-size: 14px; 
		font-weight: 400; 
		color: var(--text-color); 
		background-color: var(--bg-color); 
		margin: 0; 
		padding: 0; 
		line-height: 1.5; 
		text-rendering: optimizeLegibility; 
		-webkit-font-smoothing: antialiased; 
		-moz-osx-font-smoothing: grayscale; 
	}
	
	.container { 
		max-width: 650px; 
		margin: 0 auto; 
		padding: 60px 32px 32px 32px; 
	}
	
	header { 
		position: absolute; 
		top: 16px; 
		left: 32px; 
	}
	
	.site-title { 
		font-family: 'Merriweather', serif; 
		font-size: 24px; 
		font-weight: 900; 
		color: var(--text-color); 
		line-height: 1.2; 
		margin: 0; 
	}
	
	.site-title a { 
		color: inherit; 
		text-decoration: none; 
	}
	
	h1 { 
		font-family: 'Merriweather', serif; 
		font-size: 24px; 
		font-weight: 900; 
		color: var(--text-color); 
		line-height: 1.2; 
		margin: 0.5em 0 0.5em 0; 
	}
	
	p { 
		margin: 0 0 0.5em 0; 
	}
	
	a { 
		color: var(--text-color); 
		text-decoration: underline; 
		padding: 0 2px; 
		margin: 0 -2px; 
	}
	
	a:hover { 
		background-color: var(--highlight-color); 
	}
	
	.section-label { 
		background-color: var(--muted-bg); 
		padding: 2px 6px; 
		display: inline-block; 
		margin: 0.75em 0 0.25em 0; 
		font-family: 'Geist Mono', 'Roboto Mono', monospace; 
		font-weight: 400; 
	}
	
	mark { 
		background-color: var(--highlight-color); 
		color: inherit; 
		padding: 0 2px; 
	}
	
	ul { 
		margin: 0 0 0.75em 0; 
		padding-left: 1.5em; 
	}
	
	li { 
		margin-bottom: 0.25em; 
	}
	
	hr { 
		border: none; 
		border-top: 2px solid var(--muted-bg); 
		margin: 1em 0; 
	}
	
	blockquote { 
		background: var(--muted-bg); 
		border-left: 0; 
		margin: 0.75em 0; 
		padding: 12px; 
		font-weight: 300; 
	}
	
	blockquote p { 
		margin: 0; 
	}
	
	blockquote cite { 
		display: block; 
		margin-top: 0.5em; 
		font-style: normal; 
	}
	
	blockquote cite a { 
		color: var(--text-color); 
	}
	
	@media (max-width: 480px) { 
		header { 
			position: relative; 
			top: auto; 
			left: auto; 
			padding: 16px 32px 0 32px; 
		} 
		
		.container { 
			padding: 16px 32px 32px 32px; 
		} 
		
		.site-title { 
			font-size: 18px; 
		} 
	}
</style>
